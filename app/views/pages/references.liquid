{% extends index %}

{% block 'inner-page' %}
  <div id="features">
    <div class="container">
      <h1>
        {% editable_short_text "references_title", hint: "references_title", priority: 1, fixed: true %}
          References
        {% endeditable_short_text %}
      </h1>
      <div class="row">
        {% with_scope published: true %}
          {% for category in contents.references.group_by_category %} 
            <div class="span12 feature">
              <h3>{{ category.name | upcase }} :</h3>
            </div>
            <div class="span12 referencesblock">
              <ul class="references clearfix">
                {% for entrie in category.entries %}
                  <li {% if entrie.category == 'tradeshows' %} class="{{ entrie.tradeshowtype }}"{% endif %}>
                    <img src="{{ entrie.logo.url }}" alt="{{ entrie.name }}">
                  </li>
                {% endfor %} 
              </ul>
            </div>
          {% endfor %}
        {% endwith_scope %}
      </div>
    </div>
  </div>
{% endblock %}