{% extends index %}

{% block 'inner-page' %}

<div id="features">
  <div class="container">
    <h1>
      {{ feature.name }}
    </h1>
    <div>
      <div class="row-fluid feature" id="badges">
        <div class="span7">
          {{ feature.picture.url | image_tag }}
        </div>
        <div class="span5 content">
          <p>{{ feature.body }}</p>
        </div> 
      </div>
    </div> 
    <div>
      <div id="quick-action" style="text-align: center">
        <a href="https://app.mobicheckin.com/en/users/sign_in#auto_demo_sign_in" class="btn btn-larger btn-quick-tour">
          {% editable_short_text "try_demo", hint: "try_demo", priority: 1, fixed: true %}
            Try Online Demo
          {% endeditable_short_text %}
        </a>
        <a href="https://app.mobicheckin.com/en/users/sign_up" class="btn btn-info btn-larger">
          {% editable_short_text "create_account", hint: "create_account", priority: 1, fixed: true %}
            Sign up for Free
          {% endeditable_short_text %}
        </a>
      </div>
    </div>
  </div>
</div> 

{% endblock %}